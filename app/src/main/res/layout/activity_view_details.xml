<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_view_details.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/images"
    tools:context=".ViewDetailsActivity">

    <LinearLayout
        android:id="@+id/mabope"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="28dp">

       <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Mabope"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23sp" />



    </LinearLayout>


    <GridView
        android:id="@+id/propertyGridView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:numColumns="2"
        android:layout_below="@+id/mabope"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/propertyGridView"
        android:layout_marginTop="20dp"
        android:text="Back to Options" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:layout_marginTop="8dp"
        android:text="Buy Property" />

    <!--TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buyButton"
        android:layout_marginTop="16dp"
        android:text="Welcome, Username"/!-->

</RelativeLayout>
