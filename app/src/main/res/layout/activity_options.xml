<?xml version="1.0" encoding="utf-8"?>

<!-- res/layout/activity_options.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    android:padding="16dp"
    tools:context=".OptionsActivity">

    <LinearLayout
        android:id="@+id/mabope"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="28dp">

        <TextView
            android:id="@+id/usernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Welcome, "
            android:textColor="@color/black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Mabope"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:src="@drawable/remove_24" />


    </LinearLayout>




    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mabope"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/git" />

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Property App"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" /!-->


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lay"
        android:text="View Property"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:cornerRadius="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buyButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/viewButton"
        android:text="Buy Property"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:cornerRadius="32dp" />

    <!--Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
         />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewButton"
        android:layout_marginTop="8dp"

        />

    <ImageView
        android:id="@+id/propertyImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dash_24" />

    <Button
        android:id="@+id/viewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/propertyImageView"
        android:layout_marginTop="16dp"
        android:text="View Property" />

    <Button
        android:id="@+id/buyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewButton"
        android:layout_marginTop="8dp"
        android:text="Buy Property" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buyButton"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Welcome, Username" /!-->

</RelativeLayout>


